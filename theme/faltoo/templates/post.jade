article.entry
    .page-header
        h1
            - if article.link
                a.external(href="#{article.link}") #{article.title}
            - elif not article_page
                a(href="#{article.url}") #{article.title}
            - else
                #{article.title}
        p.meta.sub
            a(href="#{article.url}"): small #{article.locale_date}

    .page-content
        .post
            #{article.content}
            - if article.link and article_page
                p
                    a.external(href="#{article.link}") #{article.title}
