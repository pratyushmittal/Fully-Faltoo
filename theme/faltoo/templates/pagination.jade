.pagination
    - if articles_page.has_previous()
        a.prev.left-page(href="#{SITEURL}/#{page_name}#{articles_page.previous_page_number()}.html") &larr; Previous page
      
    - if articles_page.has_next()
        a.next.right-page(href="#{SITEURL}/#{page_name}#{articles_page.next_page_number()}.html") Next page &rarr;
